<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor" />

    <TextView
        android:id="@+id/tvAnio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Año de publicación" />

    <TextView
        android:id="@+id/tvSinopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sinopsis" />

    <TextView
        android:id="@+id/tvUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reseñas:"
        android:textStyle="bold"
        android:paddingTop="8dp" />

    <!-- ListView para mostrar las reseñas -->
    <ListView
        android:id="@+id/listViewResenas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Primera fila de botones: Marcar como Favorita y Eliminar Novela -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnMarcarFavorita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcar como Favorita"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnEliminarNovela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar Novela"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/colorPrimaryDark" />
    </LinearLayout>

    <!-- Segunda fila de botones: Volver a la Lista y Agregar Reseña -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnVolverLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnAgregarResena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Reseña"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/colorPrimaryDark" />
    </LinearLayout>
</LinearLayout>